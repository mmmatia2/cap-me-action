{
  "manifest_version": 3,
  "name": "Cap Me Action Recorder",
  "version": "0.0.1",
  "description": "MV3 scaffold for capturing browser actions.",
  "permissions": ["storage", "tabs", "scripting"],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content-script.js"],
      "run_at": "document_idle"
    }
  ]
}
